<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.audiopulse.activities.UsbActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/switch1"
                android:layout_gravity="center_horizontal|top"
                android:checked="false"
                android:onClick="connectToggleButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#DDD">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:id="@+id/button"
                    android:onClick="sendButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:id="@+id/button2"
                    android:onClick="sendClearButton" />

            </LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="left|top"
                android:editable="true"
                android:layout_margin="2dp"
                android:background="#fff"
                android:gravity="top"
                android:typeface="monospace" />

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:background="#dddddd">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom|left"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recv"
                    android:id="@+id/button3"
                    android:onClick="recvButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:id="@+id/button4"
                    android:onClick="recvClearButton" />
            </LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="center|right"
                android:maxLength="64"
                android:width="2dp"
                android:editable="true"
                android:inputType="textMultiLine"
                android:layout_margin="2dp"
                android:background="#fff"
                android:gravity="top"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/button5"
                android:textSize="16sp"
                android:onClick="resetButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Status"
                android:id="@+id/button6"
                android:textSize="16sp"
                android:onClick="statusButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/button7"
                android:textSize="16sp"
                android:onClick="startButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Data"
                android:id="@+id/button8"
                android:textSize="16sp"
                android:onClick="getdataButton" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot Wave"
                android:id="@+id/button9"
                android:textSize="16sp"
                android:onClick="plotWaveButton" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot Spec"
                android:id="@+id/button10"
                android:textSize="16sp"
                android:onClick="plotSpecButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ccc">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/editText3"
                android:layout_margin="8dp"
                android:background="#eee"
                android:gravity="top"
                android:focusableInTouchMode="false"
                android:typeface="monospace" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
