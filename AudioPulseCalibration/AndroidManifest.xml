<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE manifest [
    <!ENTITY CATEGORY_NAME "org.afree.chart.demo">
]>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="AudioPulseCalibration.AudioPulse.org"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
<uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".RecordActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlotWaveformActivity"
            android:label="Waveform Plot"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="&CATEGORY_NAME;" />
            </intent-filter>
        </activity>
        <activity android:name=".PlotSpectralActivity"
            android:label="Spectral Plot"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="&CATEGORY_NAME;" />
            </intent-filter>
        </activity>
    </application>
</manifest>